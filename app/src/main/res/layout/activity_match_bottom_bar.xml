<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MatchBottomBarActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="6dp">

                <ImageView
                    android:id="@+id/imgView_logo_club1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    />

                <TextView
                    android:id="@+id/txtNameClub1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Team A"
                    android:textSize="28sp" />

                <TextView
                    android:id="@+id/txtScoreClub1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="28dp" />

                <TextView
                    android:id="@+id/passeTxtA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Passes : 6"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tirsTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tirs : 6"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tirsCadresTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tirs cadrés : 6"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/fautesATxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fautes : 6"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/cartonJATxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cartons jaunes : 6"
                    android:textSize="15dp" />
                <TextView
                    android:id="@+id/cartonRATxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cartons rouges : 6"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/horsJeuTxtA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hors-jeu : 6"
                    android:textSize="15dp" />

                <Button
                    android:id="@+id/btnTirA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/rounded_corners"
                    android:text="Tir"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/btnPasseA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Passe"
                    android:background="@drawable/rounded_corners"
                    android:textSize="15sp"/>

                <Button
                    android:id="@+id/btnGoalA"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:text="But"
                    android:background="@drawable/rounded_corners"
                    android:textSize="15sp"/>

                <Button
                    android:id="@+id/btnFauteA"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:text="Faute"
                    android:background="@drawable/rounded_corners"
                    android:textSize="15sp"/>

                <Button
                    android:id="@+id/btnHorsJeuA"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/rounded_corners"
                    android:text="Hors-jeu"
                    android:textSize="15sp" />




            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="6dp">

                <ImageView
                    android:id="@+id/imgView_logo_club2"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />

                <TextView
                    android:id="@+id/txtNameClub2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Team B"
                    android:textSize="28sp" />

                <TextView
                    android:id="@+id/txtScoreClub2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="28dp" />

                <TextView
                    android:id="@+id/passeTxtB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Passes : 6"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tirsTxtB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tirs : 6"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tirsCadresTxtB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tirs cadrés : 6"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/fautesTxtB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fautes : 6"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/cartonJTxtB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cartons jaunes : 6"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/cartonRTxtB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cartons rouges : 6"
                    android:textSize="15dp" />


                <TextView
                    android:id="@+id/horsJeuTxtB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hors-jeu : 6"
                    android:textSize="15dp" />

                <Button
                    android:id="@+id/btnTirB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/rounded_corners"
                    android:text="Tir"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/btnPasseB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/rounded_corners"
                    android:text="Passe"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/btnGoalB"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/rounded_corners"
                    android:text="But"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/btnFauteB"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/rounded_corners"
                    android:text="Faute"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/btnHorsJeuB"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/rounded_corners"
                    android:text="Hors-jeu"
                    android:textSize="15sp" />


            </LinearLayout>

        </LinearLayout>

    </ScrollView>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/white"
        app:itemIconTint="@drawable/selector"
        app:itemTextColor="@drawable/selector"
        app:menu="@menu/menu_navigation" />


</RelativeLayout>