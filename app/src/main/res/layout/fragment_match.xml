<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.MatchFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="6dp">

                <ImageView
                    android:id="@+id/imgView_logo_club1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                />

                <TextView
                    android:id="@+id/txtNameClub1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Team A"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/txtScoreClub1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/tirsTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tirs : 6"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tirsCadresTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tirs cadrÃ©s : 6"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/fautesATxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fautes : 6"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/cartonJATxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cartons jaunes : 6"
                    android:textSize="15dp" />
                <TextView
                    android:id="@+id/cartonRATxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cartons rouges : 6"
                    android:textSize="15dp" />

                <Button
                    android:id="@+id/btnTirA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Tir"
                    android:background="@drawable/rounded_corners"
                    android:textSize="15sp"/>

                <Button
                    android:id="@+id/btnPasseA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Passe"
                    android:background="@drawable/rounded_corners"
                    android:textSize="15sp"/>

                <Button
                    android:id="@+id/btnGoalA"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:text="But"
                    android:background="@drawable/rounded_corners"
                    android:textSize="15sp"/>

                <Button
                    android:id="@+id/btnFauteA"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:text="Faute"
                    android:background="@drawable/rounded_corners"
                    android:textSize="15sp"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:text="Hors-jeu"
                    android:background="@drawable/rounded_corners"
                    android:textSize="15sp"/>




            </LinearLayout>



        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:padding="12dp"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/imgView_logo_club2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                />

            <TextView
                android:id="@+id/txtNameClub2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Team B"
                android:textSize="30dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtScoreClub2"
                android:text="0"
                android:textSize="30dp"
                />

            <TextView
                android:id="@+id/fautesBTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fautes : 6"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/cartonJBTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cartons jaunes : 6"
                android:textSize="15dp" />
            <TextView
                android:id="@+id/cartonRBTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cartons rouges : 6"
                android:textSize="15dp" />


            <Button
                android:id="@+id/btnGoalB"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:text="But"
                android:background="@drawable/rounded_corners"
                android:textSize="20sp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:text="Faute"
                android:background="@drawable/rounded_corners"
                android:textSize="20sp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Hors-jeu"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rounded_corners"
                android:textSize="20sp"/>


        </LinearLayout>

        </LinearLayout>

    </RelativeLayout>


</ScrollView>